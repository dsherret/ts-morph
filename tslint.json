{
    "extends": "tslint:latest",
    "rules": {
        "align": [
            true,
            "parameters",
            "statements"
        ],
        "interface-name": [false],
        "max-line-length": [ true, 185 ],
        "member-access": false,
        "member-ordering": [
            false,
            "variables-before-functions"
        ],
        "no-bitwise": false,
        "no-duplicate-imports-from-same-file": true,
        "no-empty": false,
        "no-string-literal": false,
        "ordered-imports": false,
        "one-line": [
            true,
            "check-open-brace",
            "check-catch",
            "check-whitespace"
        ],
        "object-literal-sort-keys": false,
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": "never"
            }
        ],
        "variable-name": false,
        "no-reference": false,
        "curly":  false
    },
    "rulesDirectory": [
        "tslint-rules"
    ]
}
