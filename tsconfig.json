{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "strict": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": false,
        "removeComments": false,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "stripInternal": true,
        "typeRoots": [ "node_modules/@types/" ],
        "types": [ "node", "mocha" ],
        "downlevelIteration": true,
        "importHelpers": true,
        "lib": [ "es2015" ],
        "plugins": [{
            "customTransformers": {
                "before": ["ts-nameof"]
            }
        }]
    },
    "compileOnSave": false,
    "exclude": [
        "./scripts",
        "./docs",
        "node_modules"
    ]
}
